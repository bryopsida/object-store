{
  "name": "object-store",
  "version": "0.1.0",
  "description": "Rest API that provides object store for saving files to file system",
  "main": "index.js",
  "scripts": {
    "test": "NODE_CONFIG_DIR=$PWD/src/config/ jest --coverage --testPathPattern='tests/.*\\.spec\\.ts' --testPathIgnorePatterns='tests/.*\\.rest\\.spec\\.ts'",
    "build": "node_modules/typescript/bin/tsc --project ./ && cp src/config/*.json build/src/config/",
    "start": "NODE_CONFIG_DIR=./build/src/config node build/src/server.js",
    "start:dev": "LOGGING_PRETTY_PRINT=true NODE_CONFIG_DIR=./src/config NODE_ENV=dev nodemon",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "test:e2e": "jest --testPathPattern='tests/.*\\.rest\\.spec\\.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryopsida/object-store.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bryopsida/object-store/issues"
  },
  "homepage": "https://github.com/bryopsida/object-store#readme",
  "dependencies": {
    "@fastify/auth": "^3.0.1",
    "@fastify/basic-auth": "^4.0.0",
    "@fastify/helmet": "^9.1.0",
    "config": "^3.3.7",
    "fastify": "^4.0.1",
    "pino": "^8.0.0"
  },
  "devDependencies": {
    "@types/config": "^0.0.41",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "moq.ts": "^9.0.0",
    "nodemon": "^2.0.16",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  }
}
